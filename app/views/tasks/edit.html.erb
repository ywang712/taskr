<h2>Edit task</h2>

<% if @task.errors.any? %>
	<ul>
	<% @task.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
	<% end %>
	</ul>
<% end %>

<%= simple_form_for @task do |f| %>
	<%= f.input :content %>

	<%= f.button :submit %>
<% end %>

<p>
	<%= link_to 'All Tasks', tasks_path %>
</p>
